{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yournal",
  "version": "0.1.0",
  "identifier": "com.yournal.main",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "yournal",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "headers": {
        "Cross-Origin-Embedder-Policy": "require-corp",
        "Cross-Origin-Opener-Policy": "same-origin"
      }

    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "templates/*": "./"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
